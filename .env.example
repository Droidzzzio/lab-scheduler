
# App
APP_ENV=development
BASE_URL=http://localhost:8000
TIMEZONE=Asia/Kolkata
LOG_LEVEL=info

# Database (PostgreSQL)
DB_DRIVER=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lab_scheduler
DB_USER=lab_user
DB_PASS=changeme
# Or use a single URL instead of the above keys:
# DATABASE_URL=postgres://lab_user:changeme@localhost:5432/lab_scheduler

# Sessions / Tokens
SESSION_SECRET=replace-with-long-random-string
JWT_SECRET=replace-with-another-long-random-string
ICS_SALT=replace-with-random-salt

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey-or-username
SMTP_PASS=secret
MAIL_FROM=no-reply@example.com
MAIL_FROM_NAME="Lab Scheduler"

# Security
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=120
CORS_ORIGINS=http://localhost:3000

# Feature Flags
ENABLE_WAITLIST=false
ENABLE_ICS_FEEDS=true
